{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "importHelpers": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "esm",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeInternal": true
  }
}
